<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.welsley.volunteach.BranchInfo">


    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textSize="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15dp"
            android:layout_below="@+id/tv_cv_name"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/tv_cv_name" />

        <TextView
            android:id="@+id/tv_cv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_cv_address"
            android:layout_below="@+id/tv_cv_address"
            android:layout_marginTop="17dp"
            android:text="Contact"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_cv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/tv_cv_contact"
            android:layout_alignStart="@+id/tv_cv_contact" />

        <Button
            android:id="@+id/pop_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_cv_phone"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="View Hours" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:background="#EAECEE"
        android:id="@+id/rvBranchCourses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</LinearLayout>
